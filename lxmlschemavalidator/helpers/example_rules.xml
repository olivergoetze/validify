<validation_rules>
    <ruleset element_name="{urn:isbn:1-931666-22-9}userestrict">
        <rule>   <!-- Beispiel für userestrict mit @type -->
            <rule_conditions>
                <text_value/>
                <attribute name="type">  <!-- TODO: auch Möglichkeit berücksichtigen, nur auf Vorhandensein des Attributs zu prüfen (ohne den Wert zu berücksichtigen) -->
                    <value>ead</value>
                    <value>dao</value>
                </attribute>
                <reference_element name="{urn:isbn:1-931666-22-9}c" preceding="2">
                    <attribute name="level">file</attribute>
                </reference_element>
            </rule_conditions>


            <element_content_optional>True</element_content_optional>
            <element_childen_optional>False</element_childen_optional>

            <optional_attributes/>
            <obligatory_attributes>
                <attribute name="type">
                    <allowed_values>
                        <value>ead</value>
                        <value>dao</value>
                    </allowed_values>
                    <allowed_patterns>
                        <pattern>regex-pattern1</pattern>
                        <pattern>regex-pattern2</pattern>
                    </allowed_patterns>
                </attribute>
            </obligatory_attributes>

            <optional_subelements/>
            <obligatory_subelements>
                <element>{urn:isbn:1-931666-22-9}extref</element>
            </obligatory_subelements>

            <max_occurence>2</max_occurence>

            <character_content_allowed>
                <text>False</text>
                <tail>False</tail>
            </character_content_allowed>

            <allowed_values>
                <value>a</value>
                <value>b</value>
            </allowed_values>

            <allowed_patterns>
                <pattern>regex-pattern1</pattern>
                <pattern>regex-pattern2</pattern>
            </allowed_patterns>

            <allowed_datatypes>
                <datatype>xs:ID</datatype>
                <datatype>xs:NMTOKEN</datatype>
            </allowed_datatypes>



        </rule>
        <rule>   <!-- Beispiel für userestrict ohne @type -->
            <element_content_optional>True</element_content_optional>
            <element_childen_optional>True</element_childen_optional>
        </rule>
    </ruleset>
</validation_rules>